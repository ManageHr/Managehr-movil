<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="20dp"
              android:background="#202940">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar Estudio"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

    <EditText
            android:id="@+id/etEditNomEstudio"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/edittext_background"
            android:hint="Nombre del Estudio"
            android:textColor="#FFFFFF"
            android:textColorHint="#CCCCCC"
            android:padding="12dp" />

    <EditText
            android:id="@+id/etEditInstitucion"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/edittext_background"
            android:hint="Institución"
            android:textColor="#FFFFFF"
            android:textColorHint="#CCCCCC"
            android:padding="12dp" />

    <EditText
            android:id="@+id/etEditTituloObtenido"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/edittext_background"
            android:hint="Título Obtenido"
            android:textColor="#FFFFFF"
            android:textColorHint="#CCCCCC"
            android:padding="12dp" />

    <EditText
            android:id="@+id/etEditAnioInicio"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/edittext_background"
            android:hint="Fecha Inicio (YYYY-MM-DD)"
            android:textColor="#FFFFFF"
            android:textColorHint="#CCCCCC"
            android:padding="12dp" />

    <EditText
            android:id="@+id/etEditAnioFin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edittext_background"
            android:hint="Fecha Fin (YYYY-MM-DD)"
            android:textColor="#FFFFFF"
            android:textColorHint="#CCCCCC"
            android:padding="12dp" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

        <Button
                android:id="@+id/btnGuardarEstudio"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="@drawable/button_background"
                android:text="Guardar"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

        <Button
                android:id="@+id/btnEliminarEstudio"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="@drawable/button_background"
                android:text="Eliminar"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>