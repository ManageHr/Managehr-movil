<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#202940">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Editar Usuario"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="20dp" />

        <!-- Documento (solo lectura) -->
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Documento:"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="4dp"/>
        <TextView
                android:id="@+id/tvEditNumDocumento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#CCCCCC"
                android:textSize="14sp"
                android:layout_marginBottom="12dp"
                android:padding="8dp"
                android:background="#3a4060"/>

        <!-- Nombres -->
        <EditText
                android:id="@+id/etEditPrimerNombre"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edittext_background"
                android:hint="Primer Nombre *"
                android:textColor="#FFFFFF"
                android:textColorHint="#CCCCCC"
                android:padding="12dp" />

        <EditText
                android:id="@+id/etEditSegundoNombre"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edittext_background"
                android:hint="Segundo Nombre"
                android:textColor="#FFFFFF"
                android:textColorHint="#CCCCCC"
                android:padding="12dp" />

        <!-- Apellidos -->
        <EditText
                android:id="@+id/etEditPrimerApellido"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edittext_background"
                android:hint="Primer Apellido *"
                android:textColor="#FFFFFF"
                android:textColorHint="#CCCCCC"
                android:padding="12dp" />

        <EditText
                android:id="@+id/etEditSegundoApellido"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edittext_background"
                android:hint="Segundo Apellido"
                android:textColor="#FFFFFF"
                android:textColorHint="#CCCCCC"
                android:padding="12dp" />

        <!-- Información Personal -->
        <EditText
                android:id="@+id/etEditFechaNac"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edittext_background"
                android:hint="Fecha Nacimiento (YYYY-MM-DD) *"
                android:textColor="#FFFFFF"
                android:textColorHint="#CCCCCC"
                android:padding="12dp" />

        <EditText
                android:id="@+id/etEditNumHijos"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edittext_background"
                android:hint="Número de Hijos"
                android:textColor="#FFFFFF"
                android:textColorHint="#CCCCCC"
                android:padding="12dp"
                android:inputType="number" />

        <!-- Contacto -->
        <EditText
                android:id="@+id/etEditEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edittext_background"
                android:hint="Email *"
                android:textColor="#FFFFFF"
                android:textColorHint="#CCCCCC"
                android:padding="12dp"
                android:inputType="textEmailAddress" />

        <EditText
                android:id="@+id/etEditTelefono"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edittext_background"
                android:hint="Teléfono *"
                android:textColor="#FFFFFF"
                android:textColorHint="#CCCCCC"
                android:padding="12dp"
                android:inputType="phone" />

        <EditText
                android:id="@+id/etEditDireccion"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edittext_background"
                android:hint="Dirección *"
                android:textColor="#FFFFFF"
                android:textColorHint="#CCCCCC"
                android:padding="12dp" />

        <!-- Contacto Emergencia -->
        <EditText
                android:id="@+id/etEditContactoEmergencia"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edittext_background"
                android:hint="Contacto Emergencia *"
                android:textColor="#FFFFFF"
                android:textColorHint="#CCCCCC"
                android:padding="12dp" />

        <EditText
                android:id="@+id/etEditNumContactoEmergencia"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edittext_background"
                android:hint="Teléfono Contacto Emergencia *"
                android:textColor="#FFFFFF"
                android:textColorHint="#CCCCCC"
                android:padding="12dp"
                android:inputType="phone" />

        <!-- Botones -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

            <Button
                    android:id="@+id/btnGuardarUsuario"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/button_background"
                    android:text="Guardar"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

            <Button
                    android:id="@+id/btnEliminarUsuario"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/button_background"
                    android:text="Eliminar"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            <Button
                    android:id="@+id/btnCancelarEditar"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_background"
                    android:text="Cancelar"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>