<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#3a4060">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#3a4060">

        <TextView
                android:id="@+id/tvId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/tvClaseLibreta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Clase Libreta Militar"
                android:textColor="#CCCCCC"
                android:textSize="16sp" />

        <TextView
                android:id="@+id/tvNumeroLibreta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Número Libreta"
                android:textColor="#CCCCCC"
                android:textSize="16sp" />

        <TextView
                android:id="@+id/tvUsuarioNumDocumento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Usuario N° Documento"
                android:textColor="#CCCCCC"
                android:textSize="14sp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>