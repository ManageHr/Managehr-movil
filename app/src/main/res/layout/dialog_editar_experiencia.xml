<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="20dp"
              android:background="#202940">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar Experiencia"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

    <EditText
            android:id="@+id/etEditEmpresa"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/edittext_background"
            android:hint="Empresa"
            android:textColor="#FFFFFF"
            android:textColorHint="#CCCCCC"
            android:padding="12dp" />

    <EditText
            android:id="@+id/etEditCargo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/edittext_background"
            android:hint="Cargo"
            android:textColor="#FFFFFF"
            android:textColorHint="#CCCCCC"
            android:padding="12dp" />

    <EditText
            android:id="@+id/etEditJefe"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/edittext_background"
            android:hint="Jefe Inmediato"
            android:textColor="#FFFFFF"
            android:textColorHint="#CCCCCC"
            android:padding="12dp" />

    <EditText
            android:id="@+id/etEditTelefono"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/edittext_background"
            android:hint="TelÃ©fono"
            android:textColor="#FFFFFF"
            android:textColorHint="#CCCCCC"
            android:padding="12dp" />

    <EditText
            android:id="@+id/etEditActividades"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/edittext_background"
            android:hint="Actividades"
            android:textColor="#FFFFFF"
            android:textColorHint="#CCCCCC"
            android:padding="12dp"
            android:gravity="top"
            android:inputType="textMultiLine" />

    <EditText
            android:id="@+id/etEditFechaInicio"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/edittext_background"
            android:hint="Fecha Inicio (YYYY-MM-DD)"
            android:textColor="#FFFFFF"
            android:textColorHint="#CCCCCC"
            android:padding="12dp" />

    <EditText
            android:id="@+id/etEditFechaFin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edittext_background"
            android:hint="Fecha Fin (YYYY-MM-DD)"
            android:textColor="#FFFFFF"
            android:textColorHint="#CCCCCC"
            android:padding="12dp" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

        <Button
                android:id="@+id/btnGuardarExperiencia"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="@drawable/button_background"
                android:text="Guardar"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

        <Button
                android:id="@+id/btnEliminarExperiencia"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="@drawable/button_background"
                android:text="Eliminar"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>